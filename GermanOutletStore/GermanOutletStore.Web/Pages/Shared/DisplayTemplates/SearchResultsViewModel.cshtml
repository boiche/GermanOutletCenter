@model SearchResultsViewModel

<li>
    @{
        if (Model.IsOnSale)
        {
            <div class="col-lg-4" id="item-container">
                <div id="container">
                    <div id="sale-subcontainer-border">
                        <div id="category-name">
                            <a class="details" asp-area="" asp-controller="Products" asp-action="Details" asp-route-id="@Model.ProductId" title="@Model.Name">
                                <h3>@Model.Name</h3>
                            </a>
                        </div>
                        <div id="category-image">
                            <a asp-area="" asp-controller="Products" asp-action="Details" asp-route-id="@Model.ProductId" title="@Model.Name">
                                <img class="item-image" src="@Model.ImagePath" />
                            </a>
                        </div>
                        <div id="price-box">
                            <span id="special-price" style="font-size: 19px;font-weight: bold;color: red; margin: 0px 0px 0px 13px;padding: 10px 10px 10px 1px;">
                                @(String.Format("{0:F2}", Model.Sale.DiscountPrice)) BGN
                            </span>
                            <span id="old-price" style="text-decoration: line-through solid;font-weight: normal;font-size: 15px;float: initial;margin-right: 20px;">
                                @(String.Format("{0:F2}", Model.Price)) BGN
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="col-lg-4" id="item-container">
                <div id="container">
                    <div id="subcontainer-border">
                        <div id="category-name">
                            <a class="details" asp-area="" asp-controller="Products" asp-action="Details" asp-route-id="@Model.ProductId" title="@Model.Name">
                                <h3>@Model.Name</h3>
                            </a>
                        </div>
                        <div id="category-image">
                            <a asp-area="" asp-controller="Products" asp-action="Details" asp-route-id="@Model.ProductId" title="@Model.Name">
                                <img class="item-image" src="@Model.ImagePath" />
                            </a>
                        </div>
                        <div id="price-box">
                            <div id="price" style="font-size:14px; color: rgb(153, 0, 0);font-family: Arial, Helvetica, sans-serif;font-size: 14px;font-weight: 700;line-height: 23.8px;overflow-wrap: break-word;text-align: center;white-space: nowrap;">@(String.Format("{0:F2}", Model.Price)) BGN</div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }

</li>