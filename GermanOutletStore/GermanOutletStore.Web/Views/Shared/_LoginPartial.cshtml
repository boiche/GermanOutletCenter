@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
        <ul class="nav navbar-nav navbar-right" >
            <li style="margin: 8px 13px 0px 0px"><partial name="_Search" /></li>
            <li>
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
                    <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style="text-decoration:none; color:gray">Hello @UserManager.GetUserName(User)!</a>
                    <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
                </form>
            </li>
        </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><partial name="_Search" /></li>
        <li><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    </ul>
}