@{
    ViewData["Title"] = "Outlet German Center Online Shop";
}

    <center>
        <h1>Welcome to Outlet German Center online shop.</h1><br />
        <div class="carousel slide" id="myCarousel">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
            </ol>
            <div class="carousel-inner">
                <div class="item active">
                    <img style="height:415px" src="/SiteImages/carousel/first.jpg" alt="German Outlet Store">
                </div>

                <div class="item">
                    <img style="height:415px" src="/SiteImages/carousel/second.jpg">
                </div>

                <div class="item">
                    <img style="height:415px" src="/SiteImages/carousel/third.jpg">
                </div>

                <div class="item">
                    <img style="height:415px" src="/SiteImages/carousel/last.jpg" />
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </center>
